<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ViewCaregiverAdapter"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    app:cardBackgroundColor="#C1F5FB"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:padding="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/viewCaregivers_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(index)"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/viewCaregivers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_below="@id/viewCaregivers_index"
            android:layout_marginTop="10dp"

            android:text="(Caregiver name)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/viewCaregivers_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_below="@id/viewCaregivers_name"
            android:layout_marginTop="10dp"

            android:text="(phone number)"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />


        <ImageButton
            android:id="@+id/viewCaregivers_phonecall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/viewCaregivers_name"
            android:adjustViewBounds="false"
            android:background="@null"
            android:elevation="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/e_phonecall"
            app:tint="@android:color/black" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>