<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sosButton"
        android:background="@drawable/soscorrectbutton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="-180dp"
        app:backgroundTint="#FA6C6C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF4B4B"
        android:text="CANCEL"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/sosButton"
        app:layout_constraintStart_toStartOf="@+id/sosButton"
        app:layout_constraintTop_toBottomOf="@+id/sosButton" />

    <Button
        android:id="@+id/medAlarmButton"
        android:background="@drawable/sosbutton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="43dp"
        android:text="Appointments"
        android:textSize="14dp"
        android:textColor="#000000"
        app:backgroundTint="#affdae"
        app:layout_constraintBottom_toTopOf="@+id/lostButton"
        app:layout_constraintEnd_toStartOf="@+id/locationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sosButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/locationButton"
        android:background="@drawable/sosbutton"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="43dp"
        android:text="Real Time Maps"
        android:textSize="14dp"
        android:textColor="#000000"
        app:backgroundTint="#affdae"
        app:layout_constraintBottom_toTopOf="@+id/lostButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/medAlarmButton"
        app:layout_constraintTop_toBottomOf="@+id/sosButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/lostButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="76dp"
        android:text="Help, I am Lost!"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:backgroundTint="#FA5c5c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelButton" />

    <TextView
        android:id="@+id/sosText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:elevation="5dp"
        android:text="SOS"
        android:textColor="#ffffff"
        android:textSize="49dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sosButton"
        app:layout_constraintEnd_toEndOf="@+id/sosButton"
        app:layout_constraintStart_toStartOf="@+id/sosButton"
        app:layout_constraintTop_toTopOf="@+id/sosButton"
        app:layout_constraintVertical_bias="0.492" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="82dp"
        android:backgroundTint="#535252"
        android:backgroundTintMode="src_over"
        android:text="Settings"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lostButton"
        app:layout_constraintTop_toBottomOf="@+id/locationButton" />


</androidx.constraintlayout.widget.ConstraintLayout>